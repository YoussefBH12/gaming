{% extends 'back.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ game.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ game.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ game.description }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ game.categorie }}</td>
        </tr>
        <tr>
            <th>Rating</th>
            <td>{{ game.rating }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ game.createdAt ? game.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>
    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
